<main class="max-w-4xl mx-auto p-8">
  <%# ページヘッダー %>
  <div class="mb-8">
    <div class="flex items-center gap-3 mb-2">
      <span class="text-4xl">👤</span>
      <h1 class="text-3xl font-bold text-gray-800">プロフィール</h1>
    </div>
    <p class="text-gray-600">あなたの情報と記録</p>
  </div>

  <%# プロフィールカード %>
  <div class="bg-white rounded-2xl shadow-sm p-8">
    <h2 class="text-xl font-bold text-gray-800 mb-6">基本情報</h2>

    <div class="space-y-6">
      <%# 表示名 %>
      <div class="flex items-center justify-between py-4 border-b border-gray-100">
        <span class="text-sm font-semibold text-gray-600">表示名</span>
        <span class="text-lg font-medium text-gray-800"><%= @user.display_name %></span>
      </div>

      <%# メールアドレス %>
      <div class="flex items-center justify-between py-4 border-b border-gray-100">
        <span class="text-sm font-semibold text-gray-600">メールアドレス</span>
        <span class="text-lg text-gray-800"><%= @user.email %></span>
      </div>

      <%# 現在のレベル %>
      <div class="py-6 border-b border-gray-100">
        <div class="flex items-center justify-between mb-4">
          <span class="text-sm font-semibold text-gray-600">ハレ度</span>
          <div class="text-right">
            <div class="text-2xl font-bold text-orange-600 mb-1">Lv.<%= @user.level %></div>
            <div class="text-sm text-gray-600"><%= level_name(@user.level) %></div>
          </div>
        </div>
        <%# レベルイラスト %>
        <div class="flex justify-center mt-4">
          <%= image_tag level_image_url(@user.level),
                        alt: level_name(@user.level),
                        class: "w-40 h-40 rounded-full shadow-lg object-cover" %>
        </div>
      </div>

      <%# 累計ポイント %>
      <div class="flex items-center justify-between py-4 border-b border-gray-100">
        <span class="text-sm font-semibold text-gray-600">累計ポイント</span>
        <div class="flex items-center gap-2">
          <span class="text-xl">✨</span>
          <span class="text-lg font-semibold text-gray-800"><%= @user.point_transactions.sum(:points) %> pt</span>
        </div>
      </div>

      <%# 総ハレ投稿数 %>
      <div class="flex items-center justify-between py-4 border-b border-gray-100">
        <span class="text-sm font-semibold text-gray-600">総ハレ投稿数</span>
        <div class="flex items-center gap-2">
          <span class="text-xl">🌸</span>
          <span class="text-lg font-semibold text-gray-800"><%= @user.hare_entries.count %> 件</span>
        </div>
      </div>

      <%# 登録日 %>
      <div class="flex items-center justify-between py-4">
        <span class="text-sm font-semibold text-gray-600">登録日</span>
        <span class="text-lg text-gray-800"><%= l(@user.created_at.to_date, format: :long) %></span>
      </div>
    </div>

    <%# 編集ボタン %>
    <div class="mt-8 pt-6 border-t border-gray-100">
      <%= link_to "編集", edit_profile_path, class: "bg-gradient-to-r from-orange-400 to-orange-300 text-white px-8 py-3 rounded-full font-semibold hover:from-orange-500 hover:to-orange-400 transition-colors shadow-md inline-block" %>
    </div>
  </div>
</main>
