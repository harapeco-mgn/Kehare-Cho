<%= render "shared/header" %>

<div class="container mx-auto p-4 max-w-2xl">
  <h1 class="text-2xl font-bold mb-4">プロフィール</h1>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title mb-4">あなたのプロフィール</h2>

      <div class="grid gap-4">
        <div class="flex justify-between items-center py-2 border-b">
          <span class="font-bold text-gray-600">表示名</span>
          <span class="text-lg"><%= @user.display_name %></span>
        </div>

        <div class="flex justify-between items-center py-2 border-b">
          <span class="font-bold text-gray-600">メールアドレス</span>
          <span class="text-lg"><%= @user.email %></span>
        </div>

        <div class="flex justify-between items-center py-2 border-b">
          <span class="font-bold text-gray-600">現在のレベル</span>
          <span class="text-lg font-bold text-primary">Lv.<%= @user.level %></span>
        </div>

        <div class="flex justify-between items-center py-2 border-b">
          <span class="font-bold text-gray-600">累計ポイント</span>
          <span class="text-lg"><%= @user.point_transactions.sum(:points) %> pt</span>
        </div>

        <div class="flex justify-between items-center py-2 border-b">
          <span class="font-bold text-gray-600">総ハレ投稿数</span>
          <span class="text-lg"><%= @user.hare_entries.count %> 件</span>
        </div>

        <div class="flex justify-between items-center py-2">
          <span class="font-bold text-gray-600">登録日</span>
          <span class="text-lg"><%= l(@user.created_at.to_date, format: :long) %></span>
        </div>
      </div>

      <div class="card-actions justify-end mt-6">
        <%= link_to "編集", edit_profile_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>
