<%= render "shared/header" %>

<div class="container mx-auto p-4 max-w-2xl">
  <h1 class="text-2xl font-bold mb-4">プロフィール編集</h1>

  <%= form_with model: @user, url: profile_path, method: :patch, class: "card bg-base-100 shadow-xl" do |f| %>
    <div class="card-body">

      <% if @user.errors.any? %>
        <div class="alert alert-error mb-4">
          <div>
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h3 class="font-bold">入力内容にエラーがあります</h3>
              <ul class="list-disc list-inside mt-2">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="form-control">
        <%= f.label :nickname, class: "label" do %>
          <span class="label-text font-bold">ニックネーム</span>
        <% end %>
        <%= f.text_field :nickname, class: "input input-bordered w-full", placeholder: "20文字以内で入力してください", maxlength: 20 %>
        <label class="label">
          <span class="label-text-alt text-gray-500">未設定の場合はメールアドレスの @ 前が表示されます</span>
        </label>
      </div>

      <div class="divider"></div>

      <div class="bg-base-200 p-4 rounded-lg">
        <h3 class="font-bold mb-2">メールアドレス・パスワードの変更</h3>
        <p class="text-sm text-gray-600 mb-3">
          セキュリティ上の理由により、メールアドレスとパスワードの変更は専用画面で行います。
        </p>
        <%= link_to "変更する", edit_user_registration_path, class: "btn btn-sm btn-outline" %>
      </div>

      <div class="card-actions justify-end mt-6">
        <%= link_to "キャンセル", profile_path, class: "btn" %>
        <%= f.submit "更新", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

<%= render "shared/footer" %>
