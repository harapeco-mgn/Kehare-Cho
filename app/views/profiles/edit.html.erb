<%= render "shared/header" %>

<div class="container mx-auto p-4 max-w-2xl">
  <h1 class="text-2xl font-bold mb-4 text-gray-900">プロフィール編集</h1>

  <%= form_with model: @user, url: profile_path, method: :patch, class: "card bg-white shadow-xl" do |f| %>
    <div class="card-body">

      <% if @user.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded mb-4">
          <div class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6 text-red-500 mr-2" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h3 class="font-bold text-red-700">入力内容にエラーがあります</h3>
              <ul class="list-disc list-inside mt-2 text-red-600 text-sm">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="form-control">
        <%= f.label :nickname, class: "label" do %>
          <span class="label-text font-bold text-gray-800">ニックネーム</span>
        <% end %>
        <%= f.text_field :nickname, class: "input input-bordered w-full bg-white text-gray-900 border-gray-300 focus:border-orange-500 focus:ring-2 focus:ring-orange-200", placeholder: "20文字以内で入力してください", maxlength: 20 %>
        <label class="label">
          <span class="label-text-alt text-gray-500">未設定の場合はメールアドレスの @ 前が表示されます</span>
        </label>
      </div>

      <div class="divider"></div>

      <div class="bg-orange-50 p-4 rounded-lg border border-orange-100">
        <h3 class="font-bold mb-2 text-gray-800">メールアドレス・パスワードの変更</h3>
        <p class="text-sm text-gray-600 mb-3">
          セキュリティ上の理由により、メールアドレスとパスワードの変更は専用画面で行います。
        </p>
        <%= link_to "変更する", edit_user_registration_path, class: "px-4 py-2 border-2 border-orange-400 text-orange-600 rounded-lg hover:bg-orange-50 transition-colors font-semibold text-sm" %>
      </div>

      <div class="card-actions justify-end mt-6">
        <%= link_to "キャンセル", profile_path, class: "px-8 py-3 text-gray-600 hover:text-gray-800 font-semibold" %>
        <%= f.submit "更新", class: "bg-gradient-to-r from-orange-400 to-orange-300 text-white px-8 py-3 rounded-full font-semibold hover:from-orange-500 hover:to-orange-400 transition-colors shadow-md" %>
      </div>
    </div>
  <% end %>
</div>

<%= render "shared/footer" %>
