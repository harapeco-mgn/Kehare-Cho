<main>
  <h1 class="text-2xl font-bold mb-6">ハレのカレンダー</h1>

  <div class="overflow-x-auto">
    <%= month_calendar(events: @hare_entries, attribute: :occurred_on) do |date, entries| %>
      <div class="min-h-[100px] p-2">
        <%= link_to date.day, calendar_date_path(date: date), class: "font-bold hover:text-blue-600" %>
        <% entries.each do |entry| %>
          <%= link_to entry.body.truncate(20), hare_entry_path(entry),
              class: "block text-sm bg-primary text-primary-content rounded p-1 mt-1 hover:bg-primary-focus" %>
        <% end %>
      </div>
    <% end %>
  </div>
</main>