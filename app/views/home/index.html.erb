<% if user_signed_in? %>
    <%# ログイン後のホーム画面（Stitch完全コピー） %>
    <main class="max-w-5xl mx-auto bg-[#FEF7ED] min-h-screen p-8">
      <%# 挨拶エリア %>
      <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-1">こんにちは、<%= current_user.display_name %> さん</h1>
        <p class="text-sm text-gray-500">今日も1日を大切に過ごしましょう</p>
      </div>

      <%# レベル表示（Stitch完全再現） %>
      <div class="bg-white rounded-2xl shadow-sm p-6 mb-6 relative overflow-hidden">
        <div class="flex items-start justify-between">
          <div class="flex-1">
            <p class="text-xs text-orange-600 font-semibold uppercase tracking-wider mb-2">● CURRENT LEVEL</p>
            <h2 class="text-2xl font-bold text-gray-800 mb-2">ハレ度: Lv.<%= @level || 0 %></h2>
            <p class="text-sm text-gray-600 mb-4"><%= level_name(@level || 0) %></p>

            <%# プログレスバー %>
            <div class="relative mb-2">
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-gradient-to-r from-orange-400 to-orange-300 h-2 rounded-full transition-all" style="width: <%= [(@monthly_points || 0), 100].min %>%"></div>
              </div>
              <div class="flex justify-between text-xs text-gray-500 mt-1">
                <span>Lv.<%= @level || 0 %></span>
                <span>Lv.<%= (@level || 0) + 1 %></span>
              </div>
            </div>
            <p class="text-xs text-gray-600">あと <%= [100 - (@monthly_points || 0), 0].max %>pt で新しいハレが咲きます！</p>
          </div>

          <%# レベルイラスト %>
          <div class="flex-shrink-0 ml-6">
            <%= image_tag level_image_url(@level || 0),
                          alt: level_name(@level || 0),
                          class: "w-32 h-32 rounded-full shadow-md object-cover" %>
          </div>
        </div>
      </div>

      <%# メインアクションカード（2つ横並び・Stitch完全再現） %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <%# 献立相談カード（深緑） %>
        <div class="bg-[#7A9D7E] rounded-3xl p-8 shadow-lg relative overflow-hidden min-h-[240px]">
          <%# 背景の丸（装飾）+ 絵文字 %>
          <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-32 h-32 bg-white/10 rounded-full flex items-center justify-center">
            <div class="text-5xl">🍚</div>
          </div>

          <div class="relative z-10">
            <h2 class="text-white text-xl font-bold mb-1">今日のごはん、</h2>
            <h2 class="text-white text-xl font-bold mb-8">どうする？</h2>

            <%# ボタン %>
            <div class="absolute bottom-8 right-8">
              <%= link_to "相談する", new_meal_search_path, class: "bg-white text-[#7A9D7E] px-6 py-2 rounded-full font-semibold text-sm hover:bg-gray-50 transition-colors shadow-md" %>
            </div>
          </div>
        </div>

        <%# ハレ記録カード（オレンジ） %>
        <div class="bg-gradient-to-br from-[#D4845F] to-[#C97D5D] rounded-3xl p-8 shadow-lg relative overflow-hidden min-h-[240px]">
          <%# 背景の丸（装飾）+ 絵文字 %>
          <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-32 h-32 bg-white/10 rounded-full flex items-center justify-center">
            <div class="text-5xl">✨</div>
          </div>

          <div class="relative z-10">
            <h2 class="text-white text-xl font-bold mb-1">今日、いいこと</h2>
            <h2 class="text-white text-xl font-bold mb-8">あった？</h2>

            <%# ボタン %>
            <div class="absolute bottom-8 right-8">
              <%= link_to "記録する", new_hare_entry_path, class: "bg-white text-[#D4845F] px-6 py-2 rounded-full font-semibold text-sm hover:bg-gray-50 transition-colors shadow-md" %>
            </div>
          </div>
        </div>
      </div>

      <%# 下部リンク（控えめ） %>
      <div class="flex gap-4 justify-center text-sm">
        <%= link_to "ハレ一覧", hare_entries_path, class: "text-gray-600 hover:text-gray-800 underline" %>
        <%= link_to "献立ログ", meal_searches_path, class: "text-gray-600 hover:text-gray-800 underline" %>
      </div>
    </main>
  <% else %>
    <%# 未ログイン時のLP %>
    <div class="min-h-screen bg-[#FEF7ED]">
      <%# ヒーローセクション %>
      <section class="py-20 px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">
            ケハレ帖
          </h1>
          <p class="text-2xl md:text-3xl text-orange-600 font-semibold mb-8">
            今日のごはんに、小さなハレを。
          </p>
          <p class="text-lg md:text-xl text-gray-700 mb-12 leading-relaxed max-w-2xl mx-auto">
            毎日の食事に「ちょっとした特別」を見つけて記録する、<br>
            あなただけのごはん日誌です。
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <%= link_to "無料で始める", new_user_registration_path, class: "btn bg-orange-600 hover:bg-orange-700 text-white text-lg px-8 py-4 h-auto border-0 shadow-lg" %>
            <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline text-gray-700 hover:bg-gray-100 text-lg px-8 py-4 h-auto" %>
          </div>
        </div>
      </section>

      <%# 機能紹介セクション %>
      <section class="py-16 px-4 bg-white">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
            ケハレ帖でできること
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <%# 献立相談 %>
            <div class="bg-gradient-to-br from-[#7A9D7E] to-[#6B8D6E] rounded-3xl p-8 text-white shadow-lg">
              <div class="text-5xl mb-4">🍚</div>
              <h3 class="text-2xl font-bold mb-3">献立相談</h3>
              <p class="text-white/90 leading-relaxed">
                「今日は何を作ろう？」そんな迷いを解決。
                あなたの好みに合わせた献立を提案します。
              </p>
            </div>

            <%# ハレ記録 %>
            <div class="bg-gradient-to-br from-[#D4845F] to-[#C97D5D] rounded-3xl p-8 text-white shadow-lg">
              <div class="text-5xl mb-4">✨</div>
              <h3 class="text-2xl font-bold mb-3">ハレ記録</h3>
              <p class="text-white/90 leading-relaxed">
                ちょっとした工夫や嬉しかったことを記録。
                日常の中の「小さなハレ」を大切に。
              </p>
            </div>

            <%# カレンダー %>
            <div class="bg-gradient-to-br from-[#E8A87C] to-[#D99B6E] rounded-3xl p-8 text-white shadow-lg">
              <div class="text-5xl mb-4">📅</div>
              <h3 class="text-2xl font-bold mb-3">ハレ度カレンダー</h3>
              <p class="text-white/90 leading-relaxed">
                あなたの「ハレ度」を可視化。
                毎日の積み重ねが成長の記録に。
              </p>
            </div>
          </div>
        </div>
      </section>

      <%# ベネフィットセクション %>
      <section class="py-16 px-4 bg-[#FEF7ED]">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
            こんな方におすすめ
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-white rounded-2xl p-6 shadow-sm">
              <div class="flex items-start gap-4">
                <div class="text-3xl">👨‍🍳</div>
                <div>
                  <h3 class="font-bold text-lg text-gray-900 mb-2">料理初心者の方</h3>
                  <p class="text-gray-700">献立の悩みを解決し、楽しく料理を続けられます。</p>
                </div>
              </div>
            </div>

            <div class="bg-white rounded-2xl p-6 shadow-sm">
              <div class="flex items-start gap-4">
                <div class="text-3xl">🏠</div>
                <div>
                  <h3 class="font-bold text-lg text-gray-900 mb-2">一人暮らしの方</h3>
                  <p class="text-gray-700">毎日の食事を記録し、自炊のモチベーションを維持。</p>
                </div>
              </div>
            </div>

            <div class="bg-white rounded-2xl p-6 shadow-sm">
              <div class="flex items-start gap-4">
                <div class="text-3xl">📈</div>
                <div>
                  <h3 class="font-bold text-lg text-gray-900 mb-2">成長を実感したい方</h3>
                  <p class="text-gray-700">小さな工夫を積み重ね、「ハレ度」として可視化。</p>
                </div>
              </div>
            </div>

            <div class="bg-white rounded-2xl p-6 shadow-sm">
              <div class="flex items-start gap-4">
                <div class="text-3xl">💡</div>
                <div>
                  <h3 class="font-bold text-lg text-gray-900 mb-2">日常を楽しみたい方</h3>
                  <p class="text-gray-700">ちょっとした工夫で、毎日の食事が特別に。</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <%# CTAセクション %>
      <section class="py-20 px-4 bg-gradient-to-br from-orange-500 to-orange-600">
        <div class="max-w-3xl mx-auto text-center text-white">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            今日から始めよう、<br>小さなハレのある暮らし
          </h2>
          <p class="text-lg md:text-xl mb-10 text-white/90">
            無料でアカウントを作成して、<br>
            あなただけのごはん日誌を始めましょう。
          </p>
          <%= link_to "無料で始める", new_user_registration_path, class: "btn bg-white text-orange-600 hover:bg-gray-100 text-lg px-10 py-4 h-auto border-0 shadow-lg font-bold" %>
        </div>
      </section>
    </div>
  <% end %>