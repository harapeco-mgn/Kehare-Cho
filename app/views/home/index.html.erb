<% if user_signed_in? %>
    <%# ログイン後のホーム画面 %>
    <%= render 'shared/header' %>

    <main class="container mx-auto px-4 py-8">
      <%# 今月のポイント表示 %>
      <div class="card bg-base-100 shadow-xl mb-6">
        <div class="card-body">
          <h2 class="card-title text-lg">今月の合計ポイント</h2>
          <p class="text-4xl font-bold text-primary"><%= @monthly_points || 0 %>pt</p>
        </div>
      </div>

      <%# レベル表示 %>
      <div class="card bg-base-100 shadow-xl mb-6">
        <div class="card-body">
          <h2 class="card-title text-lg">現在のレベル</h2>
          <p class="text-4xl font-bold text-secondary">Lv.<%= @level || 0 %></p>
        </div>
      </div>

      <%# 今月のハレ投稿数表示 %>
      <div class="card bg-base-100 shadow-xl mb-6">
        <div class="card-body">
          <h2 class="card-title text-lg">今月のハレ投稿数</h2>
          <p class="text-4xl font-bold text-accent"><%= @monthly_hare_entries_count || 0 %>件</p>
        </div>
      </div>
      
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title text-2xl">ようこそ、<%=
  current_user.email %> さん</h2>
          <p class="text-base-content/70">
            ケハレ帖へようこそ。各機能は現在開発中です。
          </p>
          <div class="card-actions justify-end mt-4 gap-2">
            <%= link_to "ハレを記録する", new_hare_entry_path, class: "btn btn-primary" %>
            <%= link_to "献立相談", new_meal_search_path, class: "btn btn-secondary" %>
            <%= link_to "ハレ一覧", hare_entries_path, class: "btn btn-outline btn-primary" %>
            <%= link_to "ログ一覧", meal_searches_path, class: "btn btn-outline btn-secondary" %>
          </div>
        </div>
      </div>
    </main>

    <%= render 'shared/footer' %>
  <% else %>
    <%# 未ログイン時のLP %>
    <div class="min-h-screen bg-base-200 flex items-center      
  justify-center">
      <div class="card bg-base-100 shadow-xl w-96">
        <div class="card-body">
          <h2 class="card-title text-2xl">ケハレ帖</h2>
          <p class="text-base-content/70">
            Tailwind CSS + daisyUI が正しく動作しています。     
          </p>
          <div class="card-actions justify-end mt-4">
            <%= link_to "新規登録", new_user_registration_path, 
  class: "btn btn-primary" %>
            <%= link_to "ログイン", new_user_session_path,      
  class: "btn btn-ghost" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>