<% if user_signed_in? %>
    <%# ログイン後のホーム画面 %>
    <main>
      <%# 今月のポイント表示 %>
      <div class="card bg-base-100 shadow-xl mb-6">
        <div class="card-body">
          <h2 class="card-title text-lg">今月のがんばり</h2>
          <p class="text-4xl font-bold text-primary"><%= @monthly_points || 0 %>pt</p>
        </div>
      </div>

      <%# レベル表示 %>
      <div class="card bg-base-100 shadow-xl mb-6">
        <div class="card-body">
          <h2 class="card-title text-lg">ハレ度</h2>
          <p class="text-4xl font-bold text-secondary">Lv.<%= @level || 0 %></p>
        </div>
      </div>

      <%# 今月のハレ投稿数表示 %>
      <div class="card bg-base-100 shadow-xl mb-6">
        <div class="card-body">
          <h2 class="card-title text-lg">今月のハレ</h2>
          <p class="text-4xl font-bold text-accent"><%= @monthly_hare_entries_count || 0 %>件</p>
        </div>
      </div>
      
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title text-2xl">こんにちは、<%=
  current_user.display_name %> さん</h2>
          <p class="text-base-content/70">
            今日のごはん、何かいいことあった？
          </p>
          <div class="card-actions justify-end mt-4 gap-2">
            <%= link_to "記録する", new_hare_entry_path, class: "btn btn-primary" %>
            <%= link_to "相談する", new_meal_search_path, class: "btn btn-secondary" %>
            <%= link_to "ハレ一覧", hare_entries_path, class: "btn btn-outline btn-primary" %>
            <%= link_to "献立ログ", meal_searches_path, class: "btn btn-outline btn-secondary" %>
          </div>
        </div>
      </div>
    </main>
  <% else %>
    <% content_for :hide_header do %>true<% end %>
    <%# 未ログイン時のLP %>
    <div class="min-h-screen bg-base-200 flex items-center      
  justify-center">
      <div class="card bg-base-100 shadow-xl w-96">
        <div class="card-body">
          <h2 class="card-title text-2xl">ケハレ帖</h2>
          <p class="text-lg text-primary font-semibold mb-2">今日のごはんに、小さなハレを。</p>
          <p class="text-base-content/70">
            毎日の食事に「ちょっとした特別」を見つけて記録する、あなただけのごはん日誌です。
          </p>
          <div class="card-actions justify-end mt-4">
            <%= link_to "新規登録", new_user_registration_path, 
  class: "btn btn-primary" %>
            <%= link_to "ログイン", new_user_session_path,      
  class: "btn btn-ghost" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>